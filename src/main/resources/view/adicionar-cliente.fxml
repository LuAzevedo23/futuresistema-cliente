<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="600.0" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.devlu.futuresistema_cliente.controller.controllerFX.AdicionarClienteFXController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Adicionar Novo Cliente" />
        <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
            <content>
                <VBox alignment="TOP_CENTER" spacing="15.0">
                    <children>
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Dados do Cliente" />
                        <GridPane hgap="10.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="Nome:" />
                                <TextField fx:id="nomeField" promptText="Nome Completo" GridPane.columnIndex="1" />
                                <Label text="E-mail:" GridPane.rowIndex="1" />
                                <TextField fx:id="emailField" promptText="exemplo@dominio.com" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label text="Telefone:" GridPane.rowIndex="2" />
                                <TextField fx:id="telefoneField" promptText="(XX) XXXXX-XXXX" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <Label text="Status:" GridPane.rowIndex="3" />
                                <ComboBox fx:id="statusComboBox" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </GridPane>
                        <Label style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Dados do Endereço" />
                        <GridPane hgap="10.0" vgap="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label text="CEP:" />
                                <TextField fx:id="cepField" promptText="XXXXX-XXX" GridPane.columnIndex="1" />
                                <Label text="Logradouro:" GridPane.rowIndex="1" />
                                <TextField fx:id="logradouroField" promptText="Nome da Rua/Avenida" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                <Label text="Número:" GridPane.rowIndex="2" />
                                <TextField fx:id="numeroField" promptText="S/N ou número" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                <Label text="Complemento:" GridPane.rowIndex="3" />
                                <TextField fx:id="complementoField" promptText="Apto, Bloco, Casa..." GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                <Label text="Bairro:" GridPane.rowIndex="4" />
                                <TextField fx:id="bairroField" promptText="Nome do Bairro" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                <Label text="Cidade:" GridPane.rowIndex="5" />
                                <TextField fx:id="cidadeField" promptText="Nome da Cidade" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                                <Label text="Estado (UF):" GridPane.rowIndex="6" />
                                <TextField fx:id="estadoField" promptText="Ex: SP, RJ, MG" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                            </children>
                            <padding>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </padding>
                        </GridPane>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <Button onAction="#salvarCliente" prefHeight="30.0" prefWidth="100.0" text="Salvar" />
                <Button onAction="#cancelar" prefHeight="30.0" prefWidth="100.0" text="Cancelar" />
            </children>
            <VBox.margin>
                <Insets bottom="10.0" top="10.0" />
            </VBox.margin>
        </HBox>
    </children>
</VBox>