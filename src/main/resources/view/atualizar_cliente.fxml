<?xml version="1.0" encoding="UTF-8"?>

<!--
    Paleta de Cores: Azul (#428bca), Cinza Escuro (#333), Cinza Claro (#eee)
    Emojis: ✏️ Editar, 👍 Confirmar
-->

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.devlu.futuresistema_cliente.controller.AtualizarClienteFXController"
      style="-fx-background-color: #eee;">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Atualizar Cliente" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

    <Label text="ID do Cliente:"/>
    <TextField fx:id="idTextField"/>

    <Label text="Nome:"/>
    <TextField fx:id="nomeTextField"/>

    <Label text="E-mail:"/>
    <TextField fx:id="emailTextField"/>

    <Label text="Telefone:"/>
    <TextField fx:id="telefoneTextField"/>

    <Button text="✏️ Editar" style="-fx-background-color: #428bca; -fx-text-fill: white;"
            onAction="#carregarDadosCliente"/>

    <Button text="👍 Confirmar" style="-fx-background-color: #428bca; -fx-text-fill: white;"
            onAction="#atualizarCliente"/>

    <!-- Área de mensagens/feedback ao usuário -->
    <Label fx:id="mensagemLabel" text="" style="-fx-text-fill: green;"/>
</VBox>